<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <link rel="stylesheet" href="/stylesheets/index.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <header>
        <%- include('../header_footer/header.ejs') %>
    </header>
    <main class="container">
        <h1>User List</h1>

        <button class="btn btn-success mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#createUserForm">
            Create User
        </button>

        <div class="collapse mb-3" id="createUserForm">
            <form action="/users" method="post" class="form-floating">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInputID" name="id" placeholder="ID" required>
                    <label for="floatingInputID">ID</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInputUsername" name="username"
                        placeholder="Username" required>
                    <label for="floatingInputUsername">Username</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInputFullName" name="fullname"
                        placeholder="FullName" required>
                    <label for="floatingInputFullName">FullName</label>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

        <% if (users && users.length> 0) { %>
            <table class="table table-bordered table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Full Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user=> { %>
                        <tr>
                            <td>
                                <%= user.id %>
                            </td>
                            <td>
                                <%= user.username %>
                            </td>
                            <td>
                                <%= user.fullname %>
                            </td>
                            <td>
                                <button class="btn btn-primary btn-sm">Edit</button>
                                <button class="btn btn-danger btn-sm" data-bs-toggle="modal"
                                    data-bs-target="#deleteModal<%= user.id %>">Delete</button>
                            </td>
                        </tr>
                        <!-- Delete Confirmation Modal for each user -->
                        <div class="modal fade" id="deleteModal<%= user.id %>" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Confirm Deletion</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete user <%= user.username %>?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Cancel</button>
                                        <form action="/users/<%= user.id %>" method="POST">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </tbody>
            </table>
            <% } else { %>
                <p>No users found.</p>
                <% } %>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>